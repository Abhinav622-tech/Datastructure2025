#include<iostream>
using namespace std;

class Node {
public:
    int data;
    Node* next;
    Node(int d) { data = d; next = NULL; }
};

class CircularList {
public:
    Node* head;

    CircularList() {
        head = NULL;
    }

    // INSERT AT BEGINNING
    void insertBegin(int val) {
        Node* n = new Node(val);

        if (head == NULL) {
            head = n;
            n->next = head;
            return;
        }

        Node* temp = head;
        while (temp->next != head) temp = temp->next;

        temp->next = n;
        n->next = head;
        head = n;
    }

    // INSERT AT END
    void insertEnd(int val) {
        Node* n = new Node(val);

        if (head == NULL) {
            head = n;
            n->next = head;
            return;
        }

        Node* temp = head;
        while (temp->next != head) temp = temp->next;

        temp->next = n;
        n->next = head;
    }

    // INSERT AFTER A NODE
    void insertAfter(int key, int val) {
        if (head == NULL) return;

        Node* temp = head;
        do {
            if (temp->data == key) {
                Node* n = new Node(val);
                n->next = temp->next;
                temp->next = n;
                return;
            }
            temp = temp->next;
        } while (temp != head);

        cout << "Key not found!\n";
    }

    // DELETE A NODE
    void deleteNode(int key) {
        if (head == NULL) return;

        Node* curr = head;
        Node* prev = NULL;

        // deleting head node
        if (head->data == key) {
            while (curr->next != head) curr = curr->next;
            if (head == curr) {  // only 1 node
                delete head;
                head = NULL;
                return;
            }

            curr->next = head->next;
            Node* temp = head;
            head = head->next;
            delete temp;
            return;
        }

        curr = head->next;
        prev = head;

        while (curr != head) {
            if (curr->data == key) {
                prev->next = curr->next;
                delete curr;
                return;
            }
            prev = curr;
            curr = curr->next;
        }

        cout << "Node not found!\n";
    }

    // SEARCH NODE
    bool search(int key) {
        if (head == NULL) return false;

        Node* temp = head;
        do {
            if (temp->data == key) return true;
            temp = temp->next;
        } while (temp != head);

        return false;
    }

    // DISPLAY
    void display() {
        if (head == NULL) {
            cout << "List empty\n";
            return;
        }

        Node* temp = head;
        do {
            cout << temp->data << " ";
            temp = temp->next;
        } while (temp != head);

        cout << endl;
    }
};

int main() {
    CircularList cll;
    int ch, val, key;

    while (true) {
        cout << "\n--- Circular Linked List Menu ---\n";
        cout << "1. Insert at Beginning\n";
        cout << "2. Insert at End\n";
        cout << "3. Insert After Node\n";
        cout << "4. Delete Node\n";
        cout << "5. Search Node\n";
        cout << "6. Display\n";
        cout << "0. Exit\n";
        cout << "Enter choice: ";
        cin >> ch;

        switch (ch) {
            case 1:
                cout << "Enter value: ";
                cin >> val;
                cll.insertBegin(val);
                break;

            case 2:
                cout << "Enter value: ";
                cin >> val;
                cll.insertEnd(val);
                break;

            case 3:
                cout << "Insert after which value? ";
                cin >> key;
                cout << "Enter new value: ";
                cin >> val;
                cll.insertAfter(key, val);
                break;

            case 4:
                cout << "Enter value to delete: ";
                cin >> key;
                cll.deleteNode(key);
                break;

            case 5:
                cout << "Enter value to search: ";
                cin >> key;
                if (cll.search(key)) cout << "Found!\n";
                else cout << "Not found!\n";
                break;

            case 6:
                cll.display();
                break;

            case 0:
                return 0;

            default:
                cout << "Invalid option!\n";
        }
    }
}
